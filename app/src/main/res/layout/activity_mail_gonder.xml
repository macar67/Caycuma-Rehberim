<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#227093"
    tools:context=".mailGonder">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soru ve görüşleriniz için Lütfen mail atınız...."
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mailAdress"
        android:clickable="false"
        android:text="muhammeacar4522@gmail.com"
        android:hint="Mail adresi..."/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mailKonu"
        android:hint="Mail konusu yazınız ..."/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mailIcerik"
       android:hint="Yazak istediğiniz mail içeriğini giriniz ..."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GÖNDER"
        android:id="@+id/gonder"/>

</LinearLayout>